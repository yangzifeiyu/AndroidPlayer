<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button

        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Continue"
        android:id="@+id/btnContinue"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display:"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtStatusPa"
        android:layout_toStartOf="@+id/txtStatusPa"
        />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/myRadioGroup"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtStatusPa"
        android:layout_alignEnd="@+id/txtStatusPa">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portrait"
            android:text="Portrait"
            android:textSize="10dp"
            android:textColor="#3b5998"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/landscape"
            android:text="Landscape"
            android:textSize="10dp"
            android:textColor="#3b5998"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password:"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown Time:"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignBaseline="@+id/btnShutdown"
        android:layout_alignBottom="@+id/btnShutdown"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time:"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignTop="@+id/btnWakeup"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Start Up:"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        />

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:hint="@string/edittext_hint"
        android:layout_marginTop="26dp"
        android:inputType="textPassword"
        android:layout_below="@+id/myRadioGroup"
        android:layout_alignRight="@+id/myRadioGroup"
        android:layout_alignEnd="@+id/myRadioGroup"/>

    <Button

        android:background="@drawable/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Pass"
        android:id="@+id/btnCheck"
        android:textSize="9dp"
        android:textColor="#ffffff"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:layout_alignTop="@+id/btnContinue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <!--<Button-->

    <!--android:background="@drawable/mybutton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Delete"-->
    <!--android:id="@+id/btnDelete"-->
    <!--android:textSize="10dp"-->
    <!--android:textColor="#ffffff"-->
    <!--android:layout_alignBottom="@+id/btnCheck"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignTop="@+id/btnCheck"/>-->

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/tvW"
        android:layout_alignLeft="@+id/tvW"
        android:layout_alignStart="@+id/tvW"
        android:layout_marginTop="24dp"
        android:layout_alignRight="@+id/tvW"
        android:layout_alignEnd="@+id/tvW">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes"
            android:text="Yes"
            android:textSize="10dp"
            android:textColor="#3b5998"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no"
            android:text="No"
            android:textSize="10dp"
            android:textColor="#3b5998"
            />
    </RadioGroup>

    <TextView
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:id="@+id/txtStatusPa"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/btnCheck"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Set Shutdown"
        android:id="@+id/btnShutdown"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/btnCheck"
        android:layout_alignStart="@+id/btnCheck"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:text="Set Wakeup"
        android:id="@+id/btnWakeup"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnShutdown"
        android:layout_alignLeft="@+id/btnShutdown"
        android:layout_alignStart="@+id/btnShutdown"
        android:layout_alignRight="@+id/btnShutdown"
        android:layout_alignEnd="@+id/btnShutdown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:layout_alignTop="@+id/btnShutdown"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvW"
        android:layout_alignTop="@+id/btnWakeup"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime"
        android:gravity="center"
        android:layout_alignRight="@+id/tvTime"
        android:layout_alignEnd="@+id/tvTime"/>

</RelativeLayout>