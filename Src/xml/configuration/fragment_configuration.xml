<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button

        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="Continue"
        android:id="@+id/btnContinue"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignParentLeft="true"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display:"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/myRadioGroup"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_toLeftOf="@+id/btnShutdown"
        android:layout_toStartOf="@+id/btnShutdown"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portrait"
            android:text="Portrait"
            android:textSize="12dp"
            android:textColor="#3b5998"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/landscape"
            android:text="Landscape"
            android:textSize="12dp"
            android:textColor="#3b5998"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password:"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/myRadioGroup"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown Time:"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time:"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_alignBaseline="@+id/tvW"
        android:layout_alignBottom="@+id/tvW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Start Up:"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/btnContinue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:hint="@string/edittext_hint"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime"
        android:layout_toLeftOf="@+id/btnShutdown"
        android:layout_toStartOf="@+id/btnShutdown"/>

    <Button

        android:background="@drawable/mybutton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Check Pass"
        android:id="@+id/btnCheck"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtStatusPa"
        android:layout_toEndOf="@+id/txtStatusPa"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignTop="@+id/btnContinue"/>

    <!--<Button-->

    <!--android:background="@drawable/mybutton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Delete"-->
    <!--android:id="@+id/btnDelete"-->
    <!--android:layout_marginLeft="28dp"-->
    <!--android:textSize="12dp"-->
    <!--android:layout_below="@+id/textView6"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:textColor="#ffffff"/>-->

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes"
            android:text="Yes"
            android:textSize="12dp"
            android:textColor="#3b5998"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no"
            android:text="No"
            android:textSize="12dp"
            android:textColor="#3b5998"
            />
    </RadioGroup>

    <TextView
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:id="@+id/txtStatusPa"
        android:textSize="11dp"
        android:gravity="center|bottom"
        android:layout_alignBottom="@+id/btnCheck"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Set Shutdown"
        android:id="@+id/btnShutdown"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/tvTime"
        android:layout_alignLeft="@+id/btnWakeup"
        android:layout_alignStart="@+id/btnWakeup"
        android:layout_toStartOf="@+id/btnDelete"
        android:layout_alignRight="@+id/btnWakeup"
        android:layout_alignEnd="@+id/btnWakeup"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:text="Set Wakeup"
        android:id="@+id/btnWakeup"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/radioGroup"
        android:layout_alignLeft="@+id/btnCheck"
        android:layout_alignStart="@+id/btnCheck"
        android:layout_marginBottom="29dp"
        android:layout_alignRight="@+id/btnCheck"
        android:layout_alignEnd="@+id/btnCheck"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/tvW"
        android:layout_alignRight="@+id/tvW"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvW"
        android:gravity="center"
        android:layout_alignTop="@+id/btnWakeup"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"/>

</RelativeLayout>