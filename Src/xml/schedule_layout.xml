<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text=" Insert Schedule"
        android:id="@+id/tvScheB"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:id="@+id/sche1"
        android:layout_below="@+id/tvScheB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addTempCompo"
        android:hint="sche1"
        android:layout_alignRight="@+id/tvScheB"
        android:layout_alignEnd="@+id/tvScheB" />

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/sche2"
        android:layout_below="@+id/sche1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sche1"
        android:layout_alignEnd="@+id/sche1"
        android:hint="sche2" />

    <EditText
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:id="@+id/sche3"
        android:hint="sche3"
        android:layout_above="@+id/sche2"
        android:layout_toRightOf="@+id/btnInsertNow"
        android:layout_toEndOf="@+id/btnInsertNow" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Insert now."
        android:id="@+id/btnInsertNow"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:onClick="addSche"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/sche2"
        android:layout_alignEnd="@+id/sche2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sche4"
        android:hint="sche4"
        android:layout_alignTop="@+id/sche2"
        android:layout_alignLeft="@+id/sche3"
        android:layout_alignStart="@+id/sche3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrive data"
        android:id="@+id/btnRetriSche"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:onClick="viewSchedule"
        android:layout_alignTop="@+id/btnInsertNow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
