<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text=" Insert Schedule"
        android:id="@+id/tvScheB"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvScheB"
        android:layout_alignEnd="@+id/tvScheB"
        android:layout_marginTop="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB4"
        android:layout_below="@+id/SchB1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/SchB1"
        android:layout_alignEnd="@+id/SchB1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB2"
        android:layout_alignTop="@+id/SchB1"
        android:layout_toRightOf="@+id/btnScheB"

        android:layout_alignRight="@+id/SchB8"
        android:layout_alignEnd="@+id/SchB8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB5"
        android:layout_below="@+id/SchB7"
        android:layout_toRightOf="@+id/btnScheB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB6"
        android:layout_below="@+id/SchB2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnScheB"
        android:layout_toEndOf="@+id/btnScheB" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB3"

        android:layout_below="@+id/SchB7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/SchB6"
        android:layout_toStartOf="@+id/SchB6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB7"
        android:layout_below="@+id/SchB4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/SchB5"
        android:layout_toLeftOf="@+id/SchB5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SchB8"
        android:layout_alignTop="@+id/SchB7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/SchB3"
        android:layout_toEndOf="@+id/SchB3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/btnScheB"
        android:onClick="InsertScheBlock"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrive data"
        android:id="@+id/btnRtrive"
        android:onClick="viewScheduleBlock"
        android:layout_alignTop="@+id/btnScheB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />

</RelativeLayout>
