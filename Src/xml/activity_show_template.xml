<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imgPreview"
        android:src="@drawable/preview_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/show_template_frame_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/show_template_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/imgPreview"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        >
        <com.example.mfusion.Template.TemplateView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/show_template_my_view"/>


    </FrameLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:id="@+id/txtPreview"
        android:layout_below="@+id/imgPreview"
        android:layout_alignLeft="@+id/imgPreview"
        android:layout_alignStart="@+id/imgPreview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/txtSave"
        android:layout_below="@+id/imgSave"
        android:layout_alignLeft="@+id/imgSave"
        android:layout_alignStart="@+id/imgSave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save As"
        android:id="@+id/txtSaveAs"
        android:layout_below="@+id/imgSaveAs"
        android:layout_alignLeft="@+id/imgSaveAs"
        android:layout_alignStart="@+id/imgSaveAs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/txtDelete"
        android:layout_below="@+id/imgDelete"
        android:layout_alignLeft="@+id/imgDelete"
        android:layout_alignStart="@+id/imgDelete" />



    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imgSave"
        android:src="@drawable/save"
        android:layout_below="@+id/txtPreview"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/txtPreview"
        android:layout_alignStart="@+id/txtPreview" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imgSaveAs"
        android:src="@drawable/save_as"
        android:layout_below="@+id/txtSave"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/show_template_frame_layout"
        android:layout_toStartOf="@+id/show_template_frame_layout" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imgDelete"
        android:src="@drawable/delete_btn"
        android:layout_below="@+id/txtSaveAs"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/txtSaveAs"
        android:layout_alignStart="@+id/txtSaveAs" />


</RelativeLayout>
