<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button

        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="Continue"
        android:id="@+id/btnContinue"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignParentLeft="true"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display:"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"/>

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/myRadioGroup"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnCheck"
        android:layout_alignEnd="@+id/btnCheck"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portrait"
            android:text="Portrait"
            android:textSize="10dp"
            android:textColor="#3b5998"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/landscape"
            android:text="Landscape"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#3b5998"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password:"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/etPassword"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown Time:"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:textStyle="bold"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time:"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnWakeup"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Start Up:"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:textColor="#3b5998"
        android:textStyle="bold"
        android:layout_above="@+id/btnContinue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"/>

    <EditText
        android:background="@drawable/edittext_bg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:textColorHint="#3b5998"
        android:gravity="center"
        android:layout_below="@+id/myRadioGroup"
        android:layout_alignLeft="@+id/myRadioGroup"
        android:layout_alignStart="@+id/myRadioGroup"
        android:layout_marginTop="13dp"
        android:hint="@string/edittext_hint"/>

    <Button

        android:background="@drawable/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Password"
        android:id="@+id/btnCheck"
        android:textSize="9dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnDelete"
        android:layout_toStartOf="@+id/btnDelete"
        android:layout_alignTop="@+id/btnDelete"
        android:textColor="#ffffff"/>

    <Button

        android:background="@drawable/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_marginLeft="28dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"/>

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes"
            android:text="Yes"
            android:textSize="10dp"
            android:textColor="#3b5998"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no"
            android:text="No"
            android:textSize="10dp"
            android:textColor="#3b5998"
            android:textStyle="bold"/>
    </RadioGroup>

    <TextView
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:id="@+id/txtStatusPa"
        android:textSize="11dp"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Set Shutdown"
        android:id="@+id/btnShutdown"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_toLeftOf="@+id/btnCheck"
        android:layout_toStartOf="@+id/btnCheck"/>

    <Button
        android:background="@drawable/mybutton"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:text="Set Wakeup"
        android:id="@+id/btnWakeup"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_above="@+id/radioGroup"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginBottom="18dp"
        android:layout_alignRight="@+id/btnShutdown"
        android:layout_alignEnd="@+id/btnShutdown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvTime"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/btnCheck"
        android:layout_alignRight="@+id/btnDelete"
        android:layout_alignEnd="@+id/btnDelete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvW"
        android:layout_alignTop="@+id/btnWakeup"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime"
        android:layout_alignRight="@+id/tvTime"
        android:layout_alignEnd="@+id/tvTime"/>

</RelativeLayout>